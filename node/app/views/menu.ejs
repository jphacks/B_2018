<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>menu</title>
    <link rel='stylesheet' href='/stylesheets/reset.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('header.ejs') %>
    <main>
      <div class="titlearea">
        <h3>メニュー:
        <%= menu %></h3>
      </div>
      <div>
        <form action="/menu/<%= request_id %>" method="POST">
            <input type="submit" value="これを作る">
        </form>
      </div>
      <div class="index-table-wrapper">
        <table style="padding: 20px;">
          <tr>
            <td>素材</td>
            <td>量</td>
            <td>炭水化物</td>
            <td>タンパク質</td>
            <td>脂質</td>
          </tr>
          <% recipe_data.forEach(recipe => { %>
          <tr>
            <td style="width: 100px">
              <%= recipe.food_name %>
            </td>
            <td style="width: 100px">
              <%= recipe.gram %>g
            </td>
            <td style="width: 100px">
              <%= recipe.carbohydrate %>g
            </td>
            <td style="width: 100px">
              <%= recipe.protein %>g
            </td>
            <td style="width: 100px">
              <%= recipe.lipid %>g
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
      <div>
        <h3>作り方</h3>
        <%= description %>
      </div>
    </main>
    <%- include('footer.ejs') %>
  </body>
</html>
